<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <%- include('../partials/head'); %>
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

header {
    background-color: #f0f0f0;
    padding: 20px 0;
    text-align: center;
}

header h1 {
    margin: 0;
}

header img {
    max-width: 200px;
    margin-top: 10px;
}

.products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-gap: 20px;
}

.product {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
}

.product img {
    max-width: 100%;
    height: auto;
}

button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}
    </style>
</head>
<body>
    <header>
      <%- include('../partials/header'); %>
    </header>
      <div class="container">
        <h2>All Products</h2>
        <div class="products">
            <% product.forEach(product => { %>
                <%- include('../partials/productCard', { product: product }); %>
              <% }); %>
              <!-- <div class="product">
                <img src="product1.jpg" alt="Product 1">
                <h3>Product 1</h3>
                <p>Description of Product 1</p>
                <p>$19.99</p>
                <button>Add to Cart</button>
            </div> -->
        </div>
      </div>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
</body>
</html>